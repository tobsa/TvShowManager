<UserControl x:Class="TvShowManagerWPF.TvShowTracker.TvShowLatestNews.TvShowLatestNews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TvShowManagerWPF.TvShowTracker.TvShowLatestNews"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <local:TvShowLatestNewsViewModel />
    </UserControl.DataContext>
    
    <Grid>
        <ItemsControl ItemsSource="{Binding Shows}" Foreground="Wheat">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding SeriesName}" HorizontalContentAlignment="Left" ToolTip="{Binding SeriesName}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
